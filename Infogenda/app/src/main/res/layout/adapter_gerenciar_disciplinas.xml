<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <!--Infor-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNomeDisciplina"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome da disciplina"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvNomeProfessorDisciplina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nome do professor"
                    android:textColor="#868686"
                    android:textSize="10dp"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" - " />

                <TextView
                    android:id="@+id/tvInforSalaDisciplina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Infor da Sala"
                    android:textColor="#868686"
                    android:textSize="10dp"
                    android:textStyle="italic" />
            </LinearLayout>
        </LinearLayout>

        <!--BotÃµes-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="4">

            <ImageButton
                android:id="@+id/btnRemoverDisciplina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_rectangle_radius"
                android:backgroundTint="@color/colorCancel"
                android:padding="3dp"
                android:src="@drawable/ic_delete_forever_black_24dp" />

            <ImageButton
                android:id="@+id/btnAlterarDisciplina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/bg_rectangle_radius"
                android:backgroundTint="@color/colorEdit"
                android:padding="3dp"
                android:src="@drawable/ic_mode_edit_black_24dp" />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
