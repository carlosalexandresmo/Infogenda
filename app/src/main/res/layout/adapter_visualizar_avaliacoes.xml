<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNomeAvaliacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome da avaliacao"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvDataAvaliacao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data avaliacao"
                    android:textColor="#868686"
                    android:textSize="10dp"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" - " />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipo de alerta:"
                    android:textColor="#868686"
                    android:textSize="10dp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/tvTipoAlerta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Alerta"
                    android:textColor="#868686"
                    android:textSize="10dp"
                    android:textStyle="italic" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="4">

            <ImageButton
                android:id="@+id/btnRemoverAvaliacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_rectangle_radius"
                android:backgroundTint="@color/colorCancel"
                android:padding="3dp"
                android:src="@drawable/ic_delete_forever_black_24dp" />

            <ImageButton
                android:id="@+id/btnAlterarAvaliacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/bg_rectangle_radius"
                android:backgroundTint="@color/colorEdit"
                android:padding="3dp"
                android:src="@drawable/ic_mode_edit_black_24dp" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>