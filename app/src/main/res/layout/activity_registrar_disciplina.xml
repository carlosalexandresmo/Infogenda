<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controller.RegistrarDisciplina"
    android:background="@color/colorWhite">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:elevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <!--INFORMAÇÕES-->

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_rectangle_radius"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="Informações da Disciplina"
                        android:textColor="@color/colorWhite"
                        android:textSize="18dp" />

                    <!--Nome Disciplina-->

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/etNomeDisciplina"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Nome da Disciplina"
                            android:inputType="text"/>
                    </android.support.design.widget.TextInputLayout>

                    <!--Nome Professor-->

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/etNomeProfessor"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Nome do Professor"
                            android:inputType="text"/>

                    </android.support.design.widget.TextInputLayout>

                    <!--Sala da Disciplina-->

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/etInforSala"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Número da Sala" />

                    </android.support.design.widget.TextInputLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <!--BOTAO CANCELAR-->

                        <Button
                            android:layout_width="wrap_content"
                            android:id="@+id/btnCancelarCadastroDisciplina"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_rectangle_radius"
                            android:backgroundTint="@color/colorCancel"
                            android:drawableLeft="@drawable/ic_close_black_24dp"
                            android:padding="10dp"
                            android:text="Cancelar"
                            android:textColor="@color/colorWhite" />

                        <!--BOTAO ADD-->

                        <Button
                            android:id="@+id/btnSalvarDisciplina"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/bg_rectangle_radius"
                            android:backgroundTint="@color/colorAdd"
                            android:drawableLeft="@drawable/ic_add_black_24dp"
                            android:padding="10dp"
                            android:text="Salvar"
                            android:textColor="@color/colorWhite" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>